extends layout

block content
  div.navbar.navbar-inverse.navbar-static-top(role="navigation")
    div.container
      div.navbar-header
        button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target=".navbar-collapse")
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href="#") photos.js
      div.collapse.navbar-collapse
        ul.nav.navbar-nav
          li.active
            a(href="#") Home
          li
            a(href="#about") About
          li
            a(href="#contact") Contact
  div.container
    div.carousel.slide#carousel-photos(data-ride="carousel")
      div.carousel-inner
        div.item.active
          img(src="/photos/image1.jpg")
        div.item
          img(src="/photos/image2.jpg")
        div.item
          img(src="/photos/image3.jpg")
        div.item
          img(src="/photos/image4.jpg")
        div.item
          img(src="/photos/image5.jpg")
      a.left.carousel-control(href="#carousel-photos", role="button", data-slide="prev")
      a.right.carousel-control(href="#carousel-photos", role="button", data-slide="next")
