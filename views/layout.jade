doctype html
html
  head
    title photos.js
    link(rel='stylesheet', href='#{baseurl}/css/photos.css')
    script(data-main='#{baseurl}/js/app', src='#{baseurl}/js/lib/require.js')
    meta(name="viewport", content="width=device-width, initial-scale=1, maximum-scale=1")
  body(ng-controller='photosCtrl')
    div.navbar.navbar-inverse.navbar-static-top(role="navigation")
      div.container.header
        div.navbar-header
          button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target=".navbar-collapse")
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href="#{baseurl}") photos.js
        div.collapse.navbar-collapse
          ul.nav.navbar-nav.navbar-right
            li
              a(href="#{baseurl}/archive")= t('archive')
            li
              a(href="#{baseurl}/about")= t('about')
    block content
